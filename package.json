{
	"name": "img-hasher",
	"description": "A fast image hash generator and hamming distance calculator using multiple algorithms",
	"version": "0.0.11",
	"main": "index.js",
	"types": "index.d.ts",
	"napi": {
		"name": "img-hasher",
		"package": {
			"name": "@imranbarbhuiya/img-hasher"
		},
		"triples": {
			"additional": [
				"aarch64-linux-android",
				"aarch64-apple-darwin",
				"x86_64-unknown-linux-musl"
			]
		}
	},
	"license": "MIT",
	"scripts": {
		"artifacts": "napi artifacts",
		"build": "napi build --platform --release",
		"build:debug": "napi build --platform",
		"prepublishOnly": "napi prepublish -t npm",
		"universal": "napi universal",
		"version": "napi version && yarn format && git add .",
		"format": "prettier --write . --ignore-unknown && cargo +nightly fmt"
	},
	"devDependencies": {
		"@napi-rs/cli": "^2.18.0",
		"@types/node": "^20.11.16",
		"prettier": "^3.2.5"
	},
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"hash",
		"image hash",
		"phash",
		"dhash",
		"hamming distance",
		"image difference",
		"image distance",
		"image similarity",
		"perceptual hash",
		"perceptual image hash"
	],
	"engines": {
		"node": ">= 10"
	},
	"packageManager": "yarn@4.1.0",
	"repository": "https://github.com/imranbarbhuiya/img-hasher"
}
